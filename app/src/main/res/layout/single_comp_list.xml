<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        app:cardCornerRadius="@dimen/size_10"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/parent_padding">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                android:src="@drawable/profile"></ImageView>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_toRightOf="@id/image"
                android:textColor="@color/black"
                android:textSize="@dimen/size_20"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_toRightOf="@id/image"></TextView>

            <TextView
                android:id="@+id/whatsapp_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginTop="@dimen/size_10"
                android:drawableStart="@drawable/whatsapp"
                android:drawablePadding="@dimen/size_4"
                android:text="@string/mobile"
                android:textColor="@color/primaryDark"></TextView>

            <TextView
                android:id="@+id/contact_number"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/whatsapp_number"
                android:drawableStart="@drawable/call"
                android:drawablePadding="@dimen/size_4"
                android:text="@string/mobile"
                android:textColor="@color/primaryDark"></TextView>

            <TextView
                android:id="@+id/web_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/contact_number"
                android:drawableStart="@drawable/url"
                android:drawablePadding="@dimen/size_4"
                android:text="@string/mobile"
                android:textColor="@color/primaryDark"></TextView>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/web_link"
                android:layout_marginTop="@dimen/margin_top"
                android:text="DATE"
                android:textColor="@color/black"
                android:textSize="@dimen/size_20"></TextView>

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/web_link"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_top"
                android:text="COUNTRY"
                android:textColor="@color/black"
                android:textSize="@dimen/size_20"></TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

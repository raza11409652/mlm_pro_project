<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    app:barrierMargin="@dimen/margin_top"
    android:layout_marginBottom="@dimen/margin_top"
    app:cardUseCompatPadding="true">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/size_14"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo_circle"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_60"></ImageView>
        <TextView

            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/size_10"
            app:layout_constraintBottom_toTopOf="@id/time"
            android:id="@+id/profile_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            android:text="NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_marginLeft="@dimen/size_10"
            android:id="@+id/time"
            app:layout_constraintBottom_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@+id/profile_name"
            android:text="TIME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <LinearLayout

            android:layout_marginTop="@dimen/size_10"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/horizontal_line"></include>
            <TextView
                android:id="@+id/post_data"
                android:layout_marginTop="@dimen/size_10"
                android:text="@string/social_media_marketing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/post_image"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_160"></ImageView>
    <LinearLayout
        android:padding="@dimen/size_10"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="visible"
            android:background="@drawable/click_back"
            android:id="@+id/like_wrapper"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/likes"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/likes"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"></ImageButton>
            <TextView
                android:id="@+id/like_count"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/likes"
                android:text="@string/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:background="@drawable/click_back"
            android:id="@+id/dislike_wrapper"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/dislikes"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/likes"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"></ImageButton>
            <TextView
                android:id="@+id/dislike_like_Count"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/dislikes"
                android:text="@string/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="wrap_content">
            <ImageButton

                android:id="@+id/comment"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/comment"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"></ImageButton>
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/size_4"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/comment"
                android:text="@string/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/click_back"
            android:id="@+id/share_wrapper"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/share"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/share"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"></ImageButton>
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/share"
                android:text="@string/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    app:cardCornerRadius="@dimen/size_10"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/parent_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_80"
            android:src="@drawable/profile"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:text="COMPANY NAME"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_toRightOf="@id/image"
            android:textColor="@color/black"
            android:textSize="@dimen/size_20"
            android:textStyle="bold"></TextView>

        <TextView
            android:text="add Ressinst"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_toRightOf="@id/image"
            android:textColor="@color/black"></TextView>




        <TextView
            android:drawablePadding="@dimen/size_4"
            android:drawableStart="@drawable/whatsapp"
            android:id="@+id/whatsapp_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_marginTop="@dimen/size_4"
            android:text="@string/mobile"
            android:textColor="@color/primaryDark"></TextView>

        <TextView
            android:drawablePadding="@dimen/size_4"
            android:drawableStart="@drawable/call"
            android:id="@+id/contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/whatsapp_number"
            android:layout_marginTop="@dimen/size_4"
            android:text="@string/mobile"
            android:textColor="@color/primaryDark"></TextView>

        <TextView
            android:drawableStart="@drawable/clock"
            android:drawablePadding="4dp"
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_number"
            android:layout_marginTop="@dimen/size_4"
            android:text="TIME"
            android:textColor="@color/primaryDark"></TextView>

        <TextView
            android:text="AMOUNT"
            android:id="@+id/charges"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_below="@id/time"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <padding android:bottom="@dimen/size_14" android:left="@dimen/size_18" android:right="@dimen/size_18" android:top="@dimen/size_14"></padding>
            <solid android:color="#FFFFFF" />
            <stroke android:width="1sp" android:color="@color/input_border_color_focus" />
            <corners android:bottomLeftRadius="@dimen/input_corner_radius" android:bottomRightRadius="@dimen/input_corner_radius" android:topLeftRadius="@dimen/input_corner_radius" android:topRightRadius="@dimen/input_corner_radius" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <padding android:bottom="@dimen/size_14" android:left="@dimen/size_18" android:right="@dimen/size_18" android:top="@dimen/size_14"></padding>
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/input_corner_radius" android:bottomRightRadius="@dimen/input_corner_radius" android:topLeftRadius="@dimen/input_corner_radius" android:topRightRadius="@dimen/input_corner_radius" />
            <stroke android:width="1sp" android:color="@color/input_border_color"></stroke>
        </shape>
    </item>
</selector>